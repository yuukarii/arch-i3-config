# Hide title bar of windows
for_window [class=.*] border pixel 2
gaps inner 5
gaps outer 1

# floating some apps
for_window [class="Audacious" instance="audacious"] floating enable
for_window [class="Pavucontrol" instance="pavucontrol"] floating enable

# rofi
bindsym $mod+d exec rofi -modi drun -show drun -theme-str '@import "config.rasi"' -show-icons
bindsym $mod+t exec rofi -show window -theme-str '@import "config.rasi"' -show-icons

# Backlight control
bindsym XF86MonBrightnessUp exec xbacklight +5 && notify-send "Brightness - $(xbacklight -get | cut -d '.' -f 1)%"
bindsym XF86MonBrightnessDown exec xbacklight -5 && notify-send "Brightness - $(xbacklight -get | cut -d '.' -f 1)%"

# Volume control
bindsym XF86AudioMute exec pamixer --toggle-mute 
bindsym XF86AudioRaiseVolume exec pamixer --increase 5
bindsym XF86AudioLowerVolume exec pamixer --decrease 5

# Power menu
bindsym $mod+Shift+e exec ~/.config/scripts/powermenu
bindsym $mod+l exec betterlockscreen -l dim

# switch/iterate between workspaces
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Reload polybar
bindsym $mod+Shift+p exec --no-startup-id /home/nomad/.config/polybar/launch.sh

# Open some apps
bindsym $mod+o exec firefox
bindsym $mod+n exec /opt/Notion/notion-app
bindsym $mod+c exec code

# Set wallpaper
exec --no-startup-id feh --bg-fill ~/Pictures/Wallpapers/ancient_city.jpg

# Autostart apps
exec --no-startup-id dbus-launch dunst
exec --no-startup-id /home/nomad/.config/polybar/launch.sh
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id sleep 3 && ibus-daemon -drx

# take a screenshot of a screen region and copy it to a clipboard
bindsym --release Shift+Print exec "~/.config/scripts/scregcp -s ~/Pictures/screenshots/"

# take a screenshot of a whole window and copy it to a clipboard
bindsym --release Print exec "~/.config/scripts/scregcp ~/Pictures/screenshots/"